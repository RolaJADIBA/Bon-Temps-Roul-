<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <link rel="stylesheet" href="{{asset ('css/lux.min.css') }}">
        <link rel="stylesheet" href="{{ asset('css/all.min.css') }}">
        <link rel="stylesheet" href="{{ asset('css/style.min.css') }}">
        <link rel="icon" type="png" href="{{ asset ('img/favi2.png') }}" />
        {% endblock %}
    </head>
    <body>

    {{ include('nav/navbar.html.twig') }}

    <main class="container-fluid">

        <section class="row">

            {# body #}
            <div class="col-lg-8">
                {% block body %}
            
                {% endblock %}
            </div>

            <div class="col-lg-4">

                <h2>Administration</h2>

                <ul class="list-group">
                    <a href="{{ path ('accueil_admin') }}" class="list-group-item d-flex justify-content-between align-items-center">
                        Accueil
                    </a>
                    <a href="{{ path ('articles_index') }}" class="list-group-item d-flex justify-content-between align-items-center">
                        Liste de Articles
                    </a>
                    <a href="{{ path ('produits_index') }}" class="list-group-item d-flex justify-content-between align-items-center">
                         Liste des Produits 
                    </a>
                    <a href="{{ path ('commande') }}" class="list-group-item d-flex justify-content-between align-items-center">
                        Liste des Commandes
                    </a>
                    <a href="{{ path ('user_admin') }}" class="list-group-item d-flex justify-content-between align-items-center">
                        Liste des Utilisateurs
                    </a>

                </ul>
            </div>

        </section>
    
    </main>


        {% block javascripts %}
        <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
        {% endblock %}
    </body>
</html>
