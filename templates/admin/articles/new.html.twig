{% extends 'base.html.twig' %}

{% block title %}Nouvelle article{% endblock %}

{% block body %}

    <section class="container">
        
        <h1>Créer un nouvelle article</h1>
        {{ form_start(form) }}
        
        <div class="row">
        
            <div class="col-md-8 p-3">
                {{ form_row(form.titre,{ 'attr': { 'class':'form-control'} }) }}
                {{ form_row(form.description, { 'attr': { 'class':'form-control'} }) }}

            </div>

            <div class="col-md-4 p-3 border-0 ">
                {{ form_row(form.image, { 'attr': { 'class':'form-control'} }) }}
                <button class="btn btn-primary btn-block btn-sm mt-3">Publier</button>
                <a href="{{ path('articles_index') }}" class="btn btn-outline-secondary btn-block btn-sm mt-3">Retour à la liste des articles</a>
            </div>

        </div>
    
    </section>

    <section class="container">
            {{ form_row(form.contenu, { 'attr': { 'class':'form-control'} }) }}
    </section>

        {{ form_end(form) }}

{% endblock %}

