{% extends 'admin_base.html.twig' %}


{% block title %}Articles index{% endblock %}

{% block body %}
    
        <div class="row">
            <div class="col-md-10">
                <h1>Liste des articles ({{ articles|length }})</h1>
            </div>
            <div class="col-md-2">
                 <a href="{{ path('articles_new') }}" class="btn btn-info btn-sm">
                    <i class="fas fa-plus"></i> Ajouter
                 </a>
            </div>
        </div>    
    <div class="table-responsive">
        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Titre</th>
                    <th>Image</th>
                    <th>Description</th>
                    <th>actions</th>
                </tr>
            </thead>
            <tbody>
                {% for article in articles %}
                    <tr>
                        <td>{{ article.id }}</td>
                        <td>{{ article.titre }}</td>
                        <td>{{ article.image }}</td>
                        <td>{{ article.description }}</td>
                        <td>
                            <a class="btn btn-info btn-sm" title="Voir l'article" href="{{ path('articles_show', {'id': article.id}) }}">
                                <i class="fas fa-eye"></i>
                            </a>
                            <a class="btn btn-primary btn-sm" title="Modifier l'article" href="{{ path('articles_edit', {'id': article.id}) }}">
                                <i class="fas fa-edit"></i>
                            </a>
                            <a class="btn btn-danger btn-sm" title="delete l'article" href="{{ path('articles_delete', {'id': article.id}) }}">
                                <i class="fas fa-trash-alt"></i>
                            </a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="6">Aucun produit est disponible sur le blog.</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
