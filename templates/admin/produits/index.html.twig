{% extends 'admin_base.html.twig' %}

{% block title %}Produits index{% endblock %}

{% block body %}

    <div class="container">

        <div class="row">
            <div class="col-md-10">
                <h1>Liste des produits ({{ produits|length }})</h1>
            </div>
            <div class="col-md-2">
                 <a href="{{ path('produits_new') }}" class="btn btn-info btn-sm">
                    <i class="fas fa-plus"></i> Ajouter
                 </a>
            </div>
        </div>

        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Nom</th>
                        <th>Image</th>
                        <th>Description</th>
                        <th>Prix</th>
                        <th>actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for produit in produits %}
                        <tr>
                            <td>{{ produit.id }}</td>
                            <td>{{ produit.nom }}</td>
                            <td>{{ produit.description }}</td>
                            {# <td>{{ produit.prix }}</td> #}
                            <td>{{ "%.2f"|format(produit.prix) }}</td>
                            <td>
                                <a class="btn btn-info btn-sm" href="{{ path('produits_show', {'id': produit.id}) }}">
                                    <i class="fas fa-eye"></i>
                                </a>
                                <a class="btn btn-primary btn-sm" href="{{ path('produits_edit', {'id': produit.id}) }}">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <a class="btn btn-danger btn-sm" href="{{ path('produits_delete', {'id': produit.id}) }}">
                                    <i class="far fa-trash-alt fa-lg"></i>
                                </a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="6">Aucun produit est disponible dans la boutique.</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
            {# Affiche le page par page #}
            <div class="navigation">
                {{ knp_pagination_render(produits) }}
            </div>
        </div>
    </div>

{% endblock %}
