{% extends 'admin_base.html.twig' %}

{% block title %}Liste des Commandes{% endblock %}

{% block body %}

    <div class="container">
        <div class="table-responsive">


            <h1>Liste des Commandes</h1>
            <table class="table text-center">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">Numéro de commande</th>
                        <th scope="col">Client</th>
                        <th scope="col">Statut</th>
                        <th scope="col">Action</th>
                    </tr>
                </thead>
                <tbody>
                    {% for panier in paniers %}

                        <tr>
                            <th scope="row">{{ panier.id }}</th>
                            <td>{{ panier.user.nom }} {{ panier.user.prenom }}</td>
                            <td>
                                {% if panier.statut == 0 %}
                                        <span class="badge badge-pill badge-light">En attente</span> 
                                {% endif %}
                                    {% if panier.statut == 1 %}
                                        <span class="badge badge-pill badge-warning">En préparation</span> 
                                {% endif %}
                                    {% if panier.statut == 2 %}
                                        <span class="badge badge-pill badge-info">En cours de livraison</span>
                                {% endif %}
                                {% if panier.statut == 3 %}
                                    <span class="badge badge-pill badge-success">Colis livré</span> 
                                {% endif %}
                                {% if panier.statut == 4 %}
                                    <span class="badge badge-pill badge-danger">Commande annulée</span> 
                                {% endif %}
                            </td>
                            <td><a href="{{ path('voirCommande', {'id': panier.id})}}">Voir la Commande</a>
                        </tr>

                    {% endfor %}
                </tbody>
            </table>
        </div>

    </div>

{% endblock %}

{# 
    0 = en attente
    1 = en cours
    2 = envoyé
    3 = reçu
    4 = annuler 
#}
